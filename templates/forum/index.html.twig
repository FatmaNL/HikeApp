<script>
    var xhttp = new XMLHttpRequest();
    xhttp.onreadystatechange = function() {

        console.log("clicked")
        if (this.readyState == 4 && this.status == 200) {


            var myArr = JSON.parse(this.responseText);
            comments_block = document.getElementById('commentaires')
            elements = ""
            myArr.forEach(function (item) {
                elements += `<div>
            <span style="margin-left:16px"><b>Comment: </b>${item.description}</span>
            <br>
            <span style="margin-left:16px">"At "${item.date}</span>
            <br><br>
            </div>`
            });
            comments_block.innerHTML = elements
            document.getElementById('chat-txt').value=''
        }
    }
            send_button = document.getElementById('send_button')
