{% extends 'base.html.twig' %}
{% block body %}
    <!-- **********************************************************************************************************************************************************
        MAIN CONTENT
        *********************************************************************************************************************************************************** -->
    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">

            <div class="row mt">
                <div class="col-md-12">
                    <div class="content-panel">
                        <form method="get" action="/Categorie" >
                            <div class="input-append pull-right">
                                <input type="text" name="rech"><input type="submit" value="recherche">
                            </div>
                        </form>
                        <table class="table table-striped table-advance table-hover">
                            <h4><i class="fa fa-angle-right"></i> Table des Categories</h4>
                            <hr>
                            <thead>
                            <tr>
                                <th>idCategorie</th>
                                <th class="hidden-phone"> NomCategorie</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr {% for c in categorie %}>
                                <td>
                                    {{ c.id }}
                                </td>
                                <td class="hidden-phone">{{ c.nomcategorie }}</td>
                                <td>
                                    <a href="{{ path('updcat',{'id':c.id}) }}">
                                        <button class="btn btn-primary btn-xs"><i class="fa fa-pencil"> Modifier</i></button>
                                    </a>
                                    <a href="{{ path('suppcat',{'id':c.id}) }}">
                                        <button class="btn btn-danger btn-xs"><i class="fa fa-trash-o "> Supprimer</i></button>
                                    </a>
                                </td>
                            </tr {% endfor %}>
                            </tbody>
                        </table>
                        <a href="{{ path('addcat') }}">
                            <button class="btn btn-success btn-xs"><i class="fa fa-check"> Ajouter</i></button>
                        </a>
                    </div>
                    <!-- /content-panel -->
                </div>
                <!-- /col-md-12 -->
            </div>
            <!-- /row -->
        </section>
    </section>

    <!-- /MAIN CONTENT -->
    <!--main content end-->
{% endblock %}
