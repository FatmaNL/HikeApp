{% extends 'base.html.twig' %}
{% block body %}
    <!-- **********************************************************************************************************************************************************
        MAIN CONTENT
        *********************************************************************************************************************************************************** -->
    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">

            <div class="row mt">
                <div class="col-md-12">
                    <div class="content-panel">
                        <form method="get" action="/Produit" >
                            <div class="input-append pull-right">
                                <input type="text" name="search"><input type="submit" value="recherche">
                            </div>
                        </form>
                        <table class="table table-striped table-advance table-hover">
                            <h4><i class="fa fa-angle-right"></i> Table des Produits</h4>
                            <hr>
                            <thead>
                            <tr>
                                <th>NumProduit</th>
                                <th class="hidden-phone"> NomProduit</th>
                                <th> Quantite</th>
                                <th> Prix</th>
                                <th> categorie </th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr {% for p in produit %}>
                                <td>
                                   {{ p.id }}
                                </td>
                                <td class="hidden-phone">{{ p.nomproduit }}</td>
                                <td>{{ p.quantite }} </td>
                                <td>{{ p.prix }}</td>
                                <td>{{ p.catName }}</td>
                                <td>
                                    <a href="{{ asset('uploads/images/' ~ p.image) }}">Voir image</a>

                                <td>
                                    <a href="{{ path('update',{'id':p.id}) }}">
                                        <button class="btn btn-primary btn-xs"><i class="fa fa-pencil"> Modifier</i></button>
                                    </a>
                                    <a href="{{ path('d',{'id':p.id}) }}">
                                    <button class="btn btn-danger btn-xs"><i class="fa fa-trash-o "> Supprimer</i></button>
                                    </a>
                                </td>
                            </tr {% endfor %}>
                            </tbody>
                        </table>
                        <a href="{{ path('addproduit') }}">
                            <button class="btn btn-success btn-xs"><i class="fa fa-check"> Ajouter</i></button>
                        </a>
                    </div>
                    <!-- /content-panel -->
                </div>
                <!-- /col-md-12 -->
            </div>
            <!-- /row -->
        </section>
    </section>

    <!-- /MAIN CONTENT -->
    <!--main content end-->
{% endblock %}
