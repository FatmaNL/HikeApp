{% endblock sidebar %}

{% block main %}

<section class="wrapper">
	<h3><i class="fa fa-angle-right"></i> Les Sentiers</h3>
	<div class="row">
		<div class="col-md-12">
			<div class="content-panel" style="padding: 15px">
				{{ form_start(formupdate, {'attr' : {'novalidate': 'novalidate' }}) }}

                {{ form_row(formupdate.nomsentier,{'label' : 'Nom :'} , {'attr' : {'placeholder': 'Nom' }} ) }}

				{# {{ form_errors(formupdate.depart) }} #}
				{{ form_label(formupdate.duree, "Durée: ") }}
				{{ form_widget(formupdate.duree, {'attr' : {'placeholder': 'Durée' }})}}

				{{ form_row(formupdate.distance,{'label' : 'Distance :'} , {'attr' : {'placeholder': 'Distance' }} ) }}
				{{ form_row(formupdate.difficulte,{'label' : 'Difficulté :'} , {'attr' : {'placeholder': 'Difficulté' }} ) }}
				{{ form_row(formupdate.departsentier,{'label' : 'Depart :'}, {'attr' : {'placeholder': 'Depart' }}) }}
				{{ form_row(formupdate.destinationsentier,{'label' : 'Destination :'}, {'attr' : {'placeholder': 'Destination' }} ) }}
				
				{{ form_end(formupdate) }}
			</div>
		</div>
	</div>
</section>
{% endblock main %}
